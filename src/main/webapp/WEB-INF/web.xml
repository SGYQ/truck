    <servlet-class>com.mk.controller.CarryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CarryServlet</servlet-name>
    <url-pattern>/CarryServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CarServlet</display-name>
    <servlet-name>CarServlet</servlet-name>
    <servlet-class>com.mk.controller.CarServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CarServlet</servlet-name>
    <url-pattern>/CarServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CargoServlet</display-name>
    <servlet-name>CargoServlet</servlet-name>
    <servlet-class>com.mk.controller.CargoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CargoServlet</servlet-name>
    <url-pattern>/CargoServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>BusinessServlet</display-name>
    <servlet-name>BusinessServlet</servlet-name>
    <servlet-class>com.mk.controller.BusinessServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BusinessServlet</servlet-name>
    <url-pattern>/BusinessServlet</url-pattern>
  </servlet-mapping>
</web-app>